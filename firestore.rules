rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 시스템 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /systems/{document} {
      allow read, write: if true;
    }
    
    // 구매물품 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /purchase-items/{document} {
      allow read, write: if true;
    }
    
    // 지점 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /stores/{document} {
      allow read, write: if true;
    }
    
    // 키워드 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /keywords/{document} {
      allow read, write: if true;
    }
    
    // 순위 기록 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /rankings/{document} {
      allow read, write: if true;
    }
    
    // 출퇴근 기록 컬렉션 - 모든 사용자가 읽기/쓰기 가능
    match /attendanceRecords/{document} {
      allow read, write: if true;
    }
  }
}
